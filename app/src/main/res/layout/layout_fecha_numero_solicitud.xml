<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/femsa_white"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- FECHA DE SOLICITUD ******************************************************************** -->
    <TextView
        android:id="@+id/tv_fecha_solicitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/layout_fecha_numero_solicitud_fecha"
        android:textColor="@color/femsa_black"
        android:textSize="@dimen/tv_fecha_solicitud_text_size"
        app:layout_constraintEnd_toStartOf="@+id/gl_layout_fecha_numero_solicitud_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_layout_fecha_numero_solicitud_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26/Nov/2018"
        android:textColor="@color/femsa_black"
        android:textSize="@dimen/tv_activity_detalle_celula_entrenamiento_fecha_solicitud_text_size"
        app:layout_constraintEnd_toEndOf="@+id/tv_fecha_solicitud"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_fecha_solicitud"
        app:layout_constraintTop_toBottomOf="@id/tv_fecha_solicitud" />

    <!-- NO. DE SOLICITUD ********************************************************************** -->
    <TextView
        android:id="@+id/tv_no_solicitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/layout_fecha_numero_solicitud_numero"
        android:textColor="@color/femsa_black"
        android:textSize="@dimen/tv_no_solicitud_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/gl_layout_fecha_numero_solicitud_1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_layout_fecha_numero_solicitud_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3435"
        android:textColor="@color/femsa_black"
        android:textSize="@dimen/tv_activity_detalle_celula_entrenamiento_no_solicitud_text_size"
        app:layout_constraintEnd_toEndOf="@+id/tv_no_solicitud"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_no_solicitud"
        app:layout_constraintTop_toBottomOf="@id/tv_no_solicitud" />

    <!-- GUIDELINES ************************************************************************ -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_layout_fecha_numero_solicitud_1"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>