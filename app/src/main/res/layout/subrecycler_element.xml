<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_subrecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toTopOf="@+id/subTextview"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/subButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bigimages_cocas" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/subTextview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2"
        android:text="EmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaquesEmpaques"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_subrecycler" />

</androidx.constraintlayout.widget.ConstraintLayout>