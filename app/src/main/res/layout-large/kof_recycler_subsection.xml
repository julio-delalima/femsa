<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/image_container_kof_subelement_recycler"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/kof_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/images_coca_bears"
            app:layout_constraintDimensionRatio="3:2" />

        <FrameLayout
            android:id="@+id/kof_disabler_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.3"
            android:background="@color/femsa_gray_e"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/kof_title_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Estudia sobre la coca con un videito m,uy sensual que hiz el william"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/kof_mini_download_button"
        app:layout_constraintStart_toEndOf="@+id/image_container_kof_subelement_recycler"
        app:layout_constraintTop_toTopOf="@+id/image_container_kof_subelement_recycler" />

    <ImageView
        android:id="@+id/ic_mark_as_read_listado"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_red_checkmark"
        app:layout_constraintStart_toEndOf="@+id/image_container_kof_subelement_recycler"
        app:layout_constraintTop_toBottomOf="@+id/kof_title_rv" />

    <TextView
        android:id="@+id/kof_type_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Video Interactivo"
        android:textColor="@color/femsa_red_b"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/ic_mark_as_read_listado"
        app:layout_constraintEnd_toEndOf="@+id/kof_disabler_element"
        app:layout_constraintStart_toEndOf="@+id/ic_mark_as_read_listado"
        app:layout_constraintTop_toTopOf="@+id/ic_mark_as_read_listado" />

    <TextView
        android:id="@+id/kof_description_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="In the first age, in the first battle, when the shadows first lengthened, one stood. Burned by the embers of Armageddon, his soul blistered by the fires of Hell and tainted beyond ascension, he chose the path of perpetual torment. In his ravenous hatred he found no peace; "
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_container_kof_subelement_recycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/image_container_kof_subelement_recycler"
        app:layout_constraintTop_toBottomOf="@+id/kof_type_rv" />

    <ImageView
        android:id="@+id/kof_mini_download_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:padding="0dp"
        android:src="@mipmap/ic_red_download"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/kof_title_rv" />

    <FrameLayout
        android:id="@+id/kof_disabler_element"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.3"
        android:background="@color/femsa_gray_e"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>