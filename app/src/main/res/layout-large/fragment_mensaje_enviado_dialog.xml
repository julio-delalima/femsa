<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.celulasDeEntrenamiento.detalle.porAutorizar.jefeDirecto.MensajeEnviadoDialogFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_mensaje_enviado_titulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/fragment_mensaje_enviado_dialog_titulo"
                android:textAlignment="center"
                android:textColor="@color/celulas_entrenamiento_general_text_black"
                android:textSize="@dimen/tv_mensaje_enviado_titulo_text_size"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/view_fragment_separador_1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                android:background="@color/fragment_mensaje_enviado_dialog_separador_horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_mensaje_enviado_titulo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_mensaje_enviado_contenido"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/fragment_mensaje_enviado_dialog_contenido"
                android:textAlignment="center"
                android:textColor="@color/fragment_mensaje_enviado_dialog_text_gray"
                android:textSize="@dimen/tv_mensaje_enviado_contenido_text_size"
                app:layout_constraintTop_toBottomOf="@id/view_fragment_separador_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/view_fragment_separador_2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                android:background="@color/femsa_gray_a"
                app:layout_constraintTop_toBottomOf="@id/tv_mensaje_enviado_contenido"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/btn_fragment_mensaje_enviado_dialog_aceptar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="8dp"
                android:background="@drawable/celulas_entrenamiento_button_background"
                android:text="@string/fragment_mensaje_enviado_dialog_aceptar"
                android:textColor="@color/celulas_entrenamiento_general_text_red"
                android:maxLines="1"
                android:textAllCaps="false"
                android:textSize="@dimen/btn_fragment_mensaje_enviado_dialog_aceptar_text_size"
                android:minHeight="32dp"
                app:layout_constraintTop_toBottomOf="@id/view_fragment_separador_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>