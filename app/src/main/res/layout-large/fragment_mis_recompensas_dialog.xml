<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.miCuenta.misRecompensas.misRecompensas.dialog.MisRecompensasDialogFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TÍTULO ******************************************************************************** -->
        <TextView
            android:id="@+id/tv_fragment_mis_recompensas_dialog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="@string/fragment_mis_recompensas_dialog_success_title"
            android:textAlignment="center"
            android:textColor="@color/femsa_black"
            android:textSize="@dimen/fragment_mis_recompensas_dialog_tv_titulo_text_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- SEPARADOR 1 *************************************************************************** -->
        <View
            android:id="@+id/view_1"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="#66ED1C24"
            app:layout_constraintTop_toBottomOf="@id/tv_fragment_mis_recompensas_dialog_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- DESCRIPCIÓN *************************************************************************** -->
        <TextView
            android:id="@+id/tv_fragment_mis_recompensas_dialog_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="@string/fragment_mis_recompensas_dialog_success_descripcion"
            android:textAlignment="center"
            android:textColor="@color/femsa_black"
            android:textSize="@dimen/fragment_mis_recompensas_dialog_tv_descripcion_text_size"
            app:layout_constraintTop_toBottomOf="@id/view_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- SEPARADOR 1 *************************************************************************** -->
        <View
            android:id="@+id/view_2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@color/femsa_gray_a"
            app:layout_constraintTop_toBottomOf="@id/tv_fragment_mis_recompensas_dialog_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- BOTÓN ********************************************************************************* -->
        <Button
            android:id="@+id/btn_fragment_mis_recompensas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/fragment_mis_recompensas_dialog_button"
            android:textColor="@color/femsa_red_b"
            android:textAllCaps="false"
            android:textSize="@dimen/fragment_mis_recompensas_dialog_btn_text_size"
            android:background="@drawable/celulas_entrenamiento_button_background"
            android:minHeight="32dp"
            app:layout_constraintTop_toBottomOf="@id/view_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>